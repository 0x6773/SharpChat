<Window x:Class="SharpChatUIClientVS.ConnectionSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConnectionSettings" Height="225" Width="350" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Server IP : " Grid.Row="0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="serverIP" Text="127.0.0.1" Grid.Row="0" FontSize="20" HorizontalAlignment="Right" Width="200" VerticalAlignment="Center" Height="30" TextAlignment="Center"/>
        <TextBlock Text="Server Port : " Grid.Row="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="serverPort" Text="06969" Grid.Row="1" FontSize="20" HorizontalAlignment="Right" Width="200" VerticalAlignment="Center" Height="30" TextAlignment="Center"/>
        <Button x:Name="okButton" Content="OK" Grid.Row="2" VerticalAlignment="Center" Height="30" HorizontalAlignment="Center" Width="80" Click="okButton_Click"/>
    </Grid>
</Window>
